<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Layout" />

    <style name="AppTheme.Layout.Parent">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="AppTheme.Layout.Horizontal">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppTheme.Layout.Vertical">
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <style name="AppTheme.Toolbar.Transparent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="colorPrimary">@color/colorTransparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ButtonInput" parent="Base.Widget.AppCompat.Button">
        <item name="android:minHeight">@dimen/button_height_normal</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:paddingTop">@dimen/component_medium</item>
        <item name="android:paddingBottom">@dimen/component_medium</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.ButtonInput.Flat" parent="AppTheme.ButtonInput">
        <item name="android:background">@drawable/button_primary</item>
    </style>

    <style name="AppTheme.WrappingInput">
        <item name="android:layout_marginBottom">@dimen/component_big</item>
    </style>

    <style name="AppTheme.TextInput" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:descendantFocusability">beforeDescendants</item><item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:paddingLeft">@dimen/component_big</item>
        <item name="android:paddingRight">@dimen/component_big</item>
        <item name="android:paddingTop">@dimen/component_small</item>
        <item name="android:paddingBottom">@dimen/component_big</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="colorAccent">@color/colorButtonNormal</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="AppTheme.TextLabelInput">
        <item name="android:paddingLeft">@dimen/component_big</item>
        <item name="android:paddingRight">@dimen/component_big</item>
        <item name="android:paddingTop">@dimen/component_big</item>
        <item name="android:paddingBottom">@dimen/component_extra_small</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.TextLabelError">
        <item name="android:paddingLeft">@dimen/component_big</item>
        <item name="android:paddingRight">@dimen/component_big</item>
        <item name="android:paddingTop">@dimen/component_small</item>
        <item name="android:paddingBottom">@dimen/component_big</item>
        <item name="android:textSize">@dimen/text_extra_small</item>
        <item name="android:textColor">@color/colorError</item>
        <item name="android:visibility">gone</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.TextLabelDescription">
        <item name="android:layout_marginBottom">@dimen/component_big</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

</resources>
